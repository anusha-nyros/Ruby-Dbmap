<%= render :partial => "menu" %>
<p> 
<b> Database Name:</b>
<%= @database.db_name %>
</p><br/>
<p> 
<b> Environment:</b>
<%= @database.db_environment %>
</p><br/>
<p> 
<b> Hosting:</b>
<%= @database.db_hosting %>
</p><br/>
<b> App Name:</b>
<%= @database.app.try(:name) %>
</p><br/>
<p> 
<b> Technology:</b>
<%= @database.db_technology %>
</p><br/>
<p> 
<b> Connection String:</b>
<%= @database.db_connection_string %>
</p><br/> 
<p> 
<b> Version:</b>
<%= @database.db_version %>
</p><br/>
<p> 
<b> Active:</b>
<%= @database.db_active? ? 'Yes' : 'No' %>
</p><br/>
<p> 
<b> Usage:</b>
<%= simple_format(@database.db_usage) %>
</p><br/>

<%= link_to 'Edit', edit_database_path(@database),class: 'btn btn-primary btn-danger' %> 

<%= link_to 'Destroy', @database, confirm: 'Are you sure?', method: :delete ,class: 'btn btn-danger  btn-primary  ' %>
<%= link_to 'Back', databases_path,class: 'btn btn-default' %>
